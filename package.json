{
  "name": "boilerplate-typescript-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run build:graphql && npm run build:ts",
    "build:graphql": "npm run build:graphql:schema:json && npm run build:graphql:schema:ts",
    "build:graphql:schema:json": "apollo-codegen introspect-schema src/graphql/schema.graphql --output src/graphql/schema.json",
    "build:graphql:schema:ts": "gql-gen --schema src/graphql/schema.json --template typescript --out src/graphql/schema-types.ts src/graphql/*.graphql > /dev/null",
    "build:ts": "tsc",
    "lint": "npm run lint:ts && npm run lint:type",
    "lint:ts": "tslint -c ./tslint.json -p ./tsconfig.json 'src/**/*.{ts,tsx}'",
    "lint:type": "tsc --noEmit",
    "lint:fix": "tslint -c ./tslint.json -p ./tsconfig.json --fix 'src/**/*.{ts,tsx}'",
    "start": "node dist/app.js",
    "test": "NODE_ENV=test TS_NODE_FILES=true mocha -r ts-node/register src/**/*.spec.ts",
    "validate": "npm ls",
    "watch": "concurrently \"npm run watch:graphql\" \"npm run watch:server\"",
    "watch:graphql": "nodemon --config nodemon-graphql.json",
    "watch:server": "nodemon --config nodemon-server.json | bunyan"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollographql/graphql-playground-html": "^1.6.0",
    "@types/sequelize": "^4.27.24",
    "apollo-server-core": "^2.0.0",
    "apollo-upload-server": "^6.0.0-alpha.1",
    "bunyan": "^1.8.12",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.5",
    "lodash": "^4.17.10",
    "rc": "^1.2.8",
    "restify": "^7.2.1",
    "restify-errors": "^6.1.1",
    "sequelize": "^4.38.0",
    "sqlite3": "^4.0.2",
    "umzug": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/graphql": "^0.13.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.2",
    "apollo-codegen": "^0.20.2",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "dev-null": "^0.1.1",
    "graphql-code-generator": "^0.10.3",
    "graphql-codegen-typescript-template": "^0.10.3",
    "mocha": "^5.2.0",
    "nock": "^9.4.2",
    "nodemon": "^1.18.3",
    "precommit-hook": "^3.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "pre-commit": [
    "lint",
    "validate",
    "test"
  ]
}
